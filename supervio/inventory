localhost     ansible_connection=local

# Set this to the windows host on which the powercli command will run
[ruleshost]
192.168.102.4

[ruleshost:vars]
# ruleshosts are windows machines
ansible_ssh_user="{{ win_admin }}"
ansible_ssh_pass="{{ win_pass }}"
ansible_ssh_port=5986
ansible_connection=winrm

